<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
    />
    <link rel="stylesheet" type="text/css" href="../main.css">
    <link rel="icon" href="/favicon.jpeg" type="image/x-icon">
    <title>Products || Proyecto final</title>
</head>
<body>
    <div class="allContainer">
        <%if ( !carrito  ){%>
            <form action="/api/carrito" method="post">
                <button type="submit" class="btn btn-primary" value=<%- product._id%> name="id">Crear carrito</button>
            </form>
        <% } %>
        <h1>Productos</h1>
        <div class="products">
            <% products.forEach(product => { %>
                <div class="card" style="width: 18rem;">
                    <img src=<%- product.img %> class="card-img-top" alt=<%- product.name %>>
                    <div class="card-body">
                      <h5 class="card-title"><%- product.name %></h5>
                      <h6 class="card-title">$<%- product.price %></h6>
                      <p class="card-text"><%- product.description%></p>
                      <form action="/carrito/62dca8cbe7026830f0730853/productos" method="post">
                          <button type="submit" class="btn btn-primary" value=<%- product._id%> name="id">AÃ±adir al carrito</button>
                      </form>
                    </div>
                </div>
            <% }) %>
        </div>

        <form action="/" method="get">
            <button class="btn btn-light" type="submit">Volver a la pagina principal</button>
        </form>
    </div>

    <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
    ></script>
</body>
</html>